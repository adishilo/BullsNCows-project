<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wind_warrior"
        android:alpha="0.1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player"
            android:fontFamily="casual"
            android:layout_gravity="center"
            android:textSize="40dp"
            android:layout_marginTop="7.5dp"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="9.0dp"
        >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Type your guess here"
                android:inputType="numberDecimal"
                android:id="@+id/etGuessTypingPlace"
            />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ask"
                android:id="@+id/btnGetAnswer"
            />

        </LinearLayout>

	    <TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:text="Guess History"
		    android:textSize="25dp"
		    android:layout_marginTop="60dp" 
            />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lvGuessesHistory"
            android:layout_marginTop="9.0dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
		    android:layout_marginBottom="11.0dp"
            >

        </ListView>

    </LinearLayout>
    
</RelativeLayout>